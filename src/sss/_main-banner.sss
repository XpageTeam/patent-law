@media screen and (max-width: 1400px)

	.main-slider__slide-title
		&:before
			right: 100%

		&:after
			left: 93%

		&:after, &:before
			font-size: 4.5rem


@media (max-width: 1000px)
	.main-slider

		&-info
			max-height: none
			max-width: 315px

		&__slide

			&-title
				font-size: 24px
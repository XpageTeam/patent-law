.main-slider
	img 
		display: block
		
	&__slide
		position: relative

		&-info
			&-cont
				position: absolute
				top: 0
				left: 0
				size: 100%
				display: flex

				.wrapper 
					flex-direction: column
					align-items: flex-start
					justify-content: center
					display: flex
					flex: 1 1 auto



.main-slider
	&-info
		max-width: 435px
		color: #fff
		max-height: calc(100% - 205px -120px)
		user-select: none

	&__slide
		img
			width: 100%

		&-title
			position: relative
			font-size: rem(36)
			color: var(--main-color)
			// margin-bottom: 35px

			&:before
				content: '“'
				display: block
				position: absolute
				top: -10px
				right: calc(100% - -10px)
				font-size: rem(120)
				line-height: 1
				-webkit-text-stroke: 1px #D3990B
				-webkit-text-fill-color: transparent

			&:after
				content: '“'
				display: block
				position: absolute
				bottom: -10px
				left: calc(100%)
				font-size: rem(120)
				line-height: 1
				-webkit-text-stroke: 1px #D3990B
				-webkit-text-fill-color: transparent
				transform: rotate(180deg)




		&-text
			line-height: 2

			display: none

@media screen and (max-height: 780px)
	
	.main-slider__slide-title
		font-size: 1.8rem
		margin-bottom: 20px



